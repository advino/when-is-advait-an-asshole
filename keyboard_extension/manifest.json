{
  "manifest_version": 2,
  "name": "keyboard surveillance",
  "version": "2.0",
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["Scripts/content.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["tabs", "activeTab"],
  "browser_action": {

  }
}
